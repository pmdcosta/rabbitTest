docker run -d --name docker_rabbitmq_1 --hostname docker_rabbitmq_1 pmdcosta/rabbitmq

# ------------------------------------
#----------------- Shell -------------
# ------------------------------------
docker run -it --rm --name shell_1 --link docker_rabbitmq_1:docker_rabbitmq_1 -e RABBITMQ_NODENAME=rabbit@docker_rabbitmq_1 pmdcosta/rabbitmq bash

