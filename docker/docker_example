# ------------------------------------
#--------------- RabbitMQ ------------
# ------------------------------------
docker run -d --name rabbitmq_1 --hostname rabbitmq_1 -v /home/pmdcosta/DockerProjects/rabbitmq/ssl/servers/rabbitmq_1:/ssl pmdcosta/rabbitmq

# ------------------------------------
#----------------- Shell -------------
# ------------------------------------
docker run -it --rm --name shell_1 --link rabbitmq_1:rabbitmq_1 -e RABBITMQ_NODENAME=rabbit@rabbitmq_1 pmdcosta/rabbitmq bash

# ------------------------------------
#--------------- Commands ------------
# ------------------------------------
rabbitmq/sbin/rabbitmqctl add_user pmdcosta password
rabbitmq/sbin/rabbitmqctl add_vhost development
rabbitmq/sbin/rabbitmqctl set_permissions -p development pmdcosta ".*" ".*" ".*"